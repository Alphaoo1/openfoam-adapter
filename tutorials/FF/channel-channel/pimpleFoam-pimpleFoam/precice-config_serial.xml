<?xml version="1.0"?>

<precice-configuration>

    <log>
        <sink type="stream" output="stdout" filter="%Severity% > debug" enabled="true"/>
    </log>

    <solver-interface dimensions="3">

    <data:vector name="VelocityGradient"/>
    <data:scalar name="Pressure"/>

    <mesh name="Fluid1-Mesh">
        <use-data name="VelocityGradient"/>
        <use-data name="Pressure"/>
    </mesh>

    <mesh name="Fluid2-Mesh">
        <use-data name="VelocityGradient"/>
        <use-data name="Pressure"/>
    </mesh>

    <participant name="Fluid1">
        <use-mesh name="Fluid1-Mesh" provide="yes"/>
        <use-mesh name="Fluid2-Mesh" from="Fluid2"/>
        <write-data name="VelocityGradient" mesh="Fluid1-Mesh"/>
        <read-data name="Pressure" mesh="Fluid1-Mesh"/>
        <mapping:nearest-neighbor direction="write" from="Fluid1-Mesh" to="Fluid2-Mesh" constraint="consistent" />
        <mapping:nearest-neighbor direction="read" from="Fluid2-Mesh" to="Fluid1-Mesh" constraint="consistent" />
    </participant>

    <participant name="Fluid2">
        <use-mesh name="Fluid2-Mesh" provide="yes"/>
        <read-data name="VelocityGradient" mesh="Fluid2-Mesh"/>
        <write-data name="Pressure" mesh="Fluid2-Mesh"/>
    </participant>

    <m2n:sockets from="Fluid1" to="Fluid2" distribution-type="gather-scatter"/>

    <coupling-scheme:serial-explicit>
        <timestep-length value="0.001"/>
        <max-time value="0.1"/>
        <participants first="Fluid1" second="Fluid2"/>
        <exchange data="VelocityGradient" mesh="Fluid2-Mesh" from="Fluid1" to="Fluid2"/>
        <exchange data="Pressure" mesh="Fluid2-Mesh" from="Fluid2" to="Fluid1"/>
    </coupling-scheme:serial-explicit>

    </solver-interface>

</precice-configuration>
