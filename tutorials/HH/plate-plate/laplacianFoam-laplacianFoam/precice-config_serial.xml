<?xml version="1.0"?>

<precice-configuration>

    <log>
        <sink filter="%Severity% > debug" format="---[precice] %ColorizedSeverity% %Message%" enabled="true"/>
    </log>

    <solver-interface dimensions="3">

    <data:scalar name="Temperature"/>
    <data:scalar name="Heat-Flux"/>

    <mesh name="Solid2-Mesh">
        <use-data name="Temperature"/>
        <use-data name="Heat-Flux"/>
    </mesh>

    <mesh name="Solid1-Mesh">
        <use-data name="Temperature"/>
        <use-data name="Heat-Flux"/>
    </mesh>

    <participant name="Solid2">
        <use-mesh name="Solid2-Mesh" provide="yes"/>
        <read-data name="Heat-Flux" mesh="Solid2-Mesh"/>
        <write-data name="Temperature" mesh="Solid2-Mesh"/>
    </participant>

    <participant name="Solid1">
        <use-mesh name="Solid2-Mesh" from="Solid2"/>
        <use-mesh name="Solid1-Mesh" provide="yes"/>
        <read-data name="Temperature" mesh="Solid1-Mesh"/>
        <write-data name="Heat-Flux" mesh="Solid1-Mesh"/>
        <mapping:nearest-neighbor direction="read" from="Solid2-Mesh" to="Solid1-Mesh" constraint="consistent" timing="initial"/>
        <mapping:nearest-neighbor direction="write" from="Solid1-Mesh" to="Solid2-Mesh" constraint="consistent" timing="initial"/>
    </participant>

    <m2n:sockets from="Solid2" to="Solid1" distribution-type="gather-scatter"/>

    <coupling-scheme:serial-implicit>
        <timestep-length value="0.01"/>
        <max-time value="1"/>
        <max-iterations value="200"/>
        <participants first="Solid2" second="Solid1"/>
        <exchange data="Temperature" mesh="Solid2-Mesh" from="Solid2" to="Solid1"/>
        <exchange data="Heat-Flux" mesh="Solid2-Mesh" from="Solid1" to="Solid2"/>
        <relative-convergence-measure limit="1.0e-6" data="Temperature" mesh="Solid2-Mesh"/>
        <extrapolation-order value="2"/>
        <post-processing:IQN-ILS>
            <data mesh="Solid2-Mesh" name="Heat-Flux" />
            <initial-relaxation value="0.01" />
            <max-used-iterations value="80" />
            <timesteps-reused value="10" />
            <filter type="QR1" limit="1e-8" />
        </post-processing:IQN-ILS>
    </coupling-scheme:serial-implicit>

    </solver-interface>

</precice-configuration>
